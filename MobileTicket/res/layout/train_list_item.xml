<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <RelativeLayout 
        android:id="@+id/topll_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        android:id="@+id/train_num_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:text="GGGGG"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/from_city_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="aaaa" />

            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:scaleType="fitXY"
                android:src="@drawable/trainforward" />

            <TextView
                android:id="@+id/to_city_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="bbbb" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/from_mycity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="aaaa" />

            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:scaleType="fitXY"
                android:src="@drawable/trainforward" />

            <TextView
                android:id="@+id/to_mycity_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="bbbb" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/down_up_id"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_down"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topll_id"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/txt_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="25sp"
            android:text="aaaaaaaaa"/>
    </LinearLayout>

</RelativeLayout>